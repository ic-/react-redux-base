{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".gitignore",
    "README.md",
    "nodemon.json",
    "build/*",
    "node_modules/*",
    "client/**",
    "public/**"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server/",
    "./build"
  ],
  "env": {
    "NODE_ENV": "development",
    "PORT": 8081
  },
  "ext": "js json"
}

